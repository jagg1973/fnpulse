<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Authors - FNPulse Admin</title>
    <link rel="stylesheet" href="/public/css/admin.css">
</head>

<body>
    <div class="admin-wrapper">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>FNPulse</h2>
                <p>Admin Dashboard</p>
            </div>
            <nav class="sidebar-nav">
                <a href="/" class="nav-item">
                    <span class="icon">üìä</span>
                    <span>Dashboard</span>
                </a>
                <a href="/articles" class="nav-item">
                    <span class="icon">üìù</span>
                    <span>Articles</span>
                </a>
                <a href="/news" class="nav-item">
                    <span class="icon">üóûÔ∏è</span>
                    <span>News</span>
                </a>
                <a href="/press-releases" class="nav-item">
                    <span class="icon">üì¢</span>
                    <span>Press Releases</span>
                </a>
                <a href="/pages" class="nav-item">
                    <span class="icon">üìÑ</span>
                    <span>Pages</span>
                </a>
                <a href="/authors" class="nav-item active">
                    <span class="icon">üë§</span>
                    <span>Authors</span>
                </a>
                <a href="/ads" class="nav-item">
                    <span class="icon">üì¢</span>
                    <span>Ad Banners</span>
                </a>
                <a href="/images" class="nav-item">
                    <span class="icon">üñºÔ∏è</span>
                    <span>Images</span>
                </a>
                <a href="/settings" class="nav-item">
                    <span class="icon">‚öôÔ∏è</span>
                    <span>Settings</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="content-header">
                <h1>Manage Authors</h1>
                <a href="/authors/new" class="btn btn-primary">Add New Author</a>
            </div>

            <% if (authors.length===0) { %>
                <div class="empty-state">
                    <p>No authors yet. Create your first author to get started!</p>
                    <a href="/authors/new" class="btn btn-primary">Add New Author</a>
                </div>
                <% } else { %>
                    <div class="authors-grid">
                        <% authors.forEach(author=> { %>
                            <div class="author-card">
                                <img src="<%= author.avatar %>" alt="<%= author.name %>" class="author-avatar">
                                <div class="author-info">
                                    <h3>
                                        <%= author.name %>
                                    </h3>
                                    <p class="author-title">
                                        <%= author.title %>
                                    </p>
                                    <p class="author-email">
                                        <%= author.email %>
                                    </p>
                                    <p class="author-bio">
                                        <%= author.bio.substring(0, 120) %>
                                            <% if (author.bio.length> 120) { %>...<% } %>
                                    </p>
                                    <div class="author-social">
                                        <% if (author.twitter) { %>
                                            <a href="<%= author.twitter %>" target="_blank" title="Twitter">
                                                <svg width="16" height="16" fill="currentColor">
                                                    <path
                                                        d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                                                </svg>
                                            </a>
                                            <% } %>
                                                <% if (author.linkedin) { %>
                                                    <a href="<%= author.linkedin %>" target="_blank" title="LinkedIn">
                                                        <svg width="16" height="16" fill="currentColor">
                                                            <path
                                                                d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z" />
                                                        </svg>
                                                    </a>
                                                    <% } %>
                                    </div>
                                </div>
                                <div class="author-actions">
                                    <a href="/authors/edit/<%= author.id %>" class="btn btn-small">Edit</a>
                                    <button onclick="deleteAuthor('<%= author.id %>', '<%= author.name %>')"
                                        class="btn btn-small btn-danger">Delete</button>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </main>
    </div>

    <script>
        async function deleteAuthor(id, name) {
            if (!confirm('Are you sure you want to delete author "' + name + '"? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch('/api/authors/' + id, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error deleting author: ' + error.message);
                }
            } catch (error) {
                alert('Error deleting author: ' + error.message);
            }
        }
    </script>
</body>

</html>